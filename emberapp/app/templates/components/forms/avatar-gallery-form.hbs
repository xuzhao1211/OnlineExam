{{#each options.galleries as |gallery|}}
<div class="avatar-gallery">
  <h4 class="gallery-name">{{gallery.name}}</h4>

  {{#each (batch-row gallery.images 4) as |row|}}
  <div class="row">
    {{#each row as |image|}}
    <div class="col-sm-3">
      <button type="button" class="btn btn-default btn-raised {{if isBusy "disabled"}}" {{if isBusy "disabled"}} {{action "setAvatar" image}}>
        <img src="{{unbound mediaUrl}}{{image}}" alt="">
        {{loading-overlay itemName=image activeItem=activeItem}}
      </button>
    </div>
    {{/each}}
  </div>
  {{/each}}
</div>
{{/each}}
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    {{#if isBusy}}
      <button type="button" class="btn btn-default btn-block btn-busy" disabled="disabled">
        &nbsp;
        {{loader-compact}}
      </button>
    {{else}}
      <button type="button" class="btn btn-default btn-block" {{action "cancel"}}>
        {{gettext "Cancel"}}
      </button>
    {{/if}}
  </div>
</div>